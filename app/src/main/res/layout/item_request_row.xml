<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#FFEAEB"
    android:paddingVertical="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:strokeColor="#c0b7a8"
    app:strokeWidth="1dp"
    card_view:cardElevation="2dp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_requestee_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/circle_border"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/single_artist_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_requestee_username"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textStyle="bold"

                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_suggested_band_name"
                android:layout_width="wrap_content"
                android:textColor="@color/darkgray"
                android:layout_height="wrap_content"
                android:text="Suggested Band: Band Name"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_request_message"
                android:layout_width="wrap_content"
                android:textColor="@color/darkgray"
                android:layout_height="wrap_content"
                android:text="Message content goes here."
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_accept_request"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/accept_icon"
                android:contentDescription="Accept Request"
                android:layout_marginBottom="2dp"
                />

            <ImageButton
                android:id="@+id/btn_reject_request"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/reject_icon"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>



</com.google.android.material.card.MaterialCardView>

