<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="100dp"
    android:padding="20dp">

    <TextView
        android:id="@+id/song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingBottom="26dp"
        android:text="Song Details"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/dialog_song_picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_border"
        android:padding="25dp" />


    <TextView
        android:id="@+id/dialog_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Song Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/dialog_song_liked_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Liked By: 3"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
    />

    <TextView
        android:id="@+id/dialog_song_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Genre: Rock"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/dialog_song_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Release Date: Jan 2020"
        android:textSize="14sp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/dialog_song_artists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artists: Aryan, Jain"
        android:textSize="16sp"
        android:layout_marginTop="20dp" />


</LinearLayout>
