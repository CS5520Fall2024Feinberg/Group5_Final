<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#FAF6EF"
    android:backgroundTint="#E7F5FD"
    android:paddingVertical="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:strokeColor="#c0b7a8"
    app:strokeWidth="1dp"
    card_view:cardElevation="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/artist_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/circle_border"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/single_artist_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Number of Albums Released -->
            <TextView
                android:id="@+id/albums_released"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Albums: 10"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <!-- User Join Date -->
            <TextView
                android:id="@+id/join_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Joined: Jan 2020"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/send_request_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/send_req_icon3" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>


